.container
  .row
    .col-xs-12.col-md-6.col-md-offset-3
      %h1 Sign up
      = form_with model: User, url: sign_up_path, method: :post, local: true do |f|
        .form-group
          = f.label :first_name
          = f.text_field :first_name, required: true, class: 'form-control'

        .form-group
          = f.label :last_name
          = f.text_field :last_name, required: true, class: 'form-control'

        .form-group
          = f.label :email
          = f.text_field :email, required: true, class: 'form-control'

        .form-group
          = f.label :password
          = f.password_field :password, required: true, class: 'form-control'
          = f.errors :password

        .form-group
          = f.label :password_confirmation
          = f.password_field :password_confirmation, required: true, class: 'form-control'
          = f.errors :password_confirmation

        = f.submit 'Sign up', class: 'btn btn-primary'

        .text-right
          Already have an account?
          = link_to 'Sign in.', sign_in_path
